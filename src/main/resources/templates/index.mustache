{{>layout/header}}
    <h1>게 시 판</h1>
    <div class="col-md-12">
        <div class="row">:
            <div class="col-md-6">
                <a href="/posts/save" class="btn btn-primary">글 등록</a>
                {{#userName}}
                    Logged in as : <span id="user">{{userName}}</span>
                    <a href="/logout" class="btn btn-info active" role="button">로그 아웃</a>
                {{/userName}}
                {{^userName}}
                    <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">구글 로그인</a>
                {{/userName}}
                {{^userName}}
                    <a href="/oauth2/authorization/naver" class="btn btn-success active" role="button">네이버 로그인</a>
                {{/userName}}
            </div>
        </div>
    </div>
    <br>
    <table class="table table-horizontal table-bordered">
        <thead>
            <tr>
                <th>게시글 번호</th>
                <th>제목</th>
                <th>작성자</th>
                <th>최종 수정 날짜</th>
            </tr>
        </thead>
        <tbody id="tbody">
            {{#posts}}
                <tr>
                    <td>{{id}}</td>
                    <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                    <td>{{author}}</td>
                    <td>{{modifiedDate}}</td>
                </tr>
            {{/posts}}
        </tbody>
    </table>
{{>layout/footer}}